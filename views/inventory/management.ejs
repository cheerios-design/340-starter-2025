<h1><%= title %></h1>
<%- messages() %>

<div class="management-container">
  <h2>Inventory Management</h2>
  
  <div class="management-actions">
    <div class="management-card">
      <h3>Add New Classification</h3>
      <p>Create a new vehicle classification category</p>
      <a href="/inv/add-classification" class="btn">Add Classification</a>
    </div>
    
    <div class="management-card">
      <h3>Add New Vehicle</h3>
      <p>Add a new vehicle to the inventory</p>
      <a href="/inv/add-inventory" class="btn">Add Vehicle</a>
    </div>
  </div>

  <h2>Manage Inventory</h2>
  <p>Choose a classification from the list to see the items belonging to the classification.</p>
  <% if (locals.classificationList) { %>
    <%- classificationList %>
  <% } %>
  <table id="inventoryDisplay"></table>
  <noscript>JavaScript must be enabled to use this page.</noscript>
</div>

<script src="/js/inventory.js"></script>
