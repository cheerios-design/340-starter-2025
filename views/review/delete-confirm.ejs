<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<% if (errors) { %>
  <ul class="notice">
   <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
<% } %>

<div class="review-delete-confirm">
  <h2>Are you sure you want to delete this review?</h2>
  
  <div class="review-preview">
    <p><strong>Rating:</strong> 
      <% for(let i = 0; i < review_rating; i++) { %>★<% } %>
      <% for(let i = review_rating; i < 5; i++) { %>☆<% } %>
      (<%= review_rating %>/5)
    </p>
    <p><strong>Review:</strong></p>
    <blockquote><%= review_text %></blockquote>
  </div>
  
  <form action="/review/delete" method="post">
    <input type="hidden" name="review_id" value="<%= review_id %>">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    
    <button type="submit" class="btn-danger">Yes, Delete Review</button>
    <a href="/inv/detail/<%= inv_id %>" class="btn-secondary">No, Keep Review</a>
  </form>
</div>
